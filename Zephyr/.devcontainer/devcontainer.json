{
    "name": "Zephyr-Ubuntu",
    "runArgs": [
        "--name", "zephyr-ubuntu",
        "-v", "//./pipe/openssh-ssh-agent:/ssh-agent",
        "-e", "SSH_AUTH_SOCK=/ssh-agent",
        "-v", "${localWorkspaceFolder}/.devcontainer:/.devcontainer",
        "--privileged",
        "-v", "/dev:/dev"
    ],
    "build": {
        "dockerfile": "Dockerfile"
    },
    "workspaceMount": "source=/opt/workspace,target=/opt/workspace,type=bind",
    "workspaceFolder": "/opt/workspace",
    "customizations": {
        "vscode": {
            "extensions": [
                "marus25.cortex-debug",
                "mhutchie.git-graph",
                "eamodio.gitlens",
                "twxs.cmake",
                "ms-vscode.cmake-tools",
                "ms-vscode.cpptools",
                "ms-vscode.cpptools-extension-pack",
                "ms-vscode.cpptools-themes",
                "ms-azuretools.vscode-docker"
            ]
        }
    },

    "onCreateCommand": "bash /.devcontainer/on_create_command.sh",
    "postStartCommand": "bash /.devcontainer/post_start_command.sh"
}
